<dialogs:DialogBase x:Class="FrameControl.Dialogs.Message.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:FrameControl.Dialogs.Message"
        xmlns:dialogs="clr-namespace:FrameControl.Dialogs"
        mc:Ignorable="d"
        Title="{Binding Caption}" Height="450" Width="800"
        Style="{DynamicResource CustomWindowBaseStyle}">
    <Grid>
        <TextBlock Text="{Binding Text}" Padding="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5,5,5,39"/>
        <Button Style="{StaticResource ConfirmButton}" Content="Confirm" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="100" Height="24"/>
        <Button Style="{StaticResource CancelButton}" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,115,10" VerticalAlignment="Bottom" Width="100" Height="24"/>
    </Grid>
</dialogs:DialogBase>
